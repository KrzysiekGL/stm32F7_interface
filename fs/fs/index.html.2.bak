<!DOCTYPE html>
<html lang="pl">
  <head>

    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />

    <link rel="stylesheet" href="style.css">

    <script src="controller.js"></script>

  </head>

  <body>

  <div id="page">

    <div id="header">
      <h1>STM32F7</h1>
      <h2>Sterowanie wyjść i odczyt stanów LED</h2>
    </div>

    <div id="content">
  		<div class = "butcenter">

        <div id="controlRelayCheckBtn">
          <input class = "controlRelayBtn" type="button" onclick="GetRelaysStates();" value="LED"/>
        </div>

        <div id="stanyLedow">
          <div id="led0" class="led"></div>
          <div id="led1" class="led"></div>
          <div id="led2" class="led"></div>
          <div id="led3" class="led"></div>
          <div style="clear: both;"></div>
        </div>

        <br><br>

        <div id="controlRelayBtn1">
          <input class = "controlRelayBtn" type="button" onclick="setRelayState(1);" value="Uruchom przekaźnik 1"/>
        </div>

        <br><br>

        <div id="controlRelayBtn2">
          <input class = "controlRelayBtn" type="button" onclick="GetRelayState(2);" value="Uruchom przekaźnik 2"/>
        </div>

  		  <br><br>

        <div id="controlRelayBtn3">
          <input class = "controlRelayBtn" type="button" onclick="GetRelayState(3);" value="Uruchom przekaźnik 3"/>
        </div>

        <br><br>

        <div id="controlRelayBtn4">
          <input class = "controlRelayBtn" type="button" onclick="GetRelayState(4);" value="Uruchom przekaźnik 4"/>
        </div>

        <br><br>

        <div id="controlRelayBtn5">
          <input class = "controlRelayBtn" type="button" onclick="GetRelayState(5);" value="Uruchom przekaźnik 5"/>
        </div>

        <br><br>
        <br><b>Pobranie danych z układu:</b><br>

        <div id="butReadTempFromDev">
          <input class = "butReadData" type="button" onclick="loadTempFromDevice();" value="Odczytaj temperaturę:"/>
          <br><br>
        </div>

        <div id="readedTempLbl">
          &nbsp;&nbsp;&nbsp;&nbsp;<label>Temp</label>
          <br><br>
        </div>

      </div>

    </div>

  </div>

  </body>
</html>
